brighmonitor() {
    if [ "$#" -ne 2 ]; then
        echo -n "Telas: "; xrandr --listmonitors | awk 'NR>1 {printf "%s ", $4}'
        echo ""
        echo "Uso: brighmonitor <nome_da_tela> <valor_do_brilho>"
        return 1
    fi
    xrandr --output "$1" --brightness "$2"
}